extends ../layout

block content
  body.show_tender
  h1.show_tender_heading  Showing #{tenders.name}
  h2
    if (tenders.picture === null || tenders.picture == 'undefined')
      img.show_tender_image(src='https://ugotalksalot.files.wordpress.com/2016/06/no-thumb.jpg' alt='No Image Available')
    else
      img.show_tender_image(src='#{tenders.picture}' alt='No Image Available')
  if tenders
    div.show-tender
    form.tender_show(action='/bids', method='post')
      p.dashy #{tenders.name}
      p.dashy #{tenders.description}
      p.dashy type: #{tenders.tender_type}
      input(type='hidden', name='user_id', value='#{user_id}')
      input.show_tender_heading(type='textarea', name='name', value='#{tenders.name}', hidden)
      input(type='textarea', name='description', value='#{tenders.description}', hidden)
      input(type='textarea', name='type', value='#{tenders.tender_type}', hidden)
      input(type='textarea', name='tender_id', value='#{tenders.id}', hidden)
      input.bid_description(type='textarea', name='bid_description', value='', placeholder='Enter your offer here')
      input.make_offer(type='submit', name='', value='Make Offer')
    div.tender_show
      h2.show_tender_heading Owner Name: #{tenders.first_name} #{tenders.last_name}
      p Email Address: #{tenders.email_address}
