extends ../layout

block content
  div#parent
    div#blue-border
      h1 Edit:
        div.row
          form.cols12#edit-prof(action='/users/:id/edit', method='post')
            div.row
              div.input-field.col.s6
                input(type='text', name='first_name', value='#{user.first_name}', maxlength="35", placeholder='First Name')
              div.row
                div.input-field.col.s6
                  input(type='text', name='last_name', value='#{user.last_name}', maxlength="35", placeholder='Last Name')
              div.row
                div.input-field.col.s6
                  input(type='text', name='username', value='#{user.username}', maxlength="35", placeholder='Username', required)
                  input(type='text', name='id', value='#{user.id}', hidden) 
                div.input-field.col.s6
                  input(type='email', name='email_address', value='#{user.email_address}', maxlength="35", placeholder='JohnDoe@example.com')
              div.row
                div.input-field.col.s12
                  input.user_update_about_me(type='textarea' name='about_me', value='#{user.about_me}')
                  label#aboutme-label(for="aboutme") About Me
              div.file-field.input-field.tenders-form
                div.btn#upload-file-butt
                  span#file-text Change profile pic
                  input(type='text', name='profile_pic', value='#{user.profile_pic}')
              button.btn.waves-effect.waves-light#user-update-butt(type='submit', name='', value='Submit Profile') Update
                i.material-icons.right send
